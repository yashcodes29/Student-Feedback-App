<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/text_slideshow"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:autoStart="true"
        android:flipInterval="2000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campus2"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campus1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campus3"
            tools:ignore="ContentDescription" />
    </ViewFlipper>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MET Bhujbal Knowledge City  is a sprawling educational campus located in Nashik, Maharashtra, India. The campus is spread across 75 acres of lush greenery and consists of several institutes offering diverse courses in various fields of study.  The campus is home to several institutes, including MET Institute of Management (MBA), MET Institute of Polytechnic , MET Institute of Pharmacy, MET League of Colleges, and MET Institute of Engineering. Each of these institutes offers state-of-the-art facilities and modern amenities to students, including classrooms, labs, libraries, sports facilities, and more."
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="The campus also has several amenities to ensure a comfortable and convenient stay for students. These include a canteen, a gymnasium, a medical center, and separate hostels for boys and girls. MET's Bhujbal Knowledge city  is a top-notch educational campus in Nashik that offers a world-class learning experience to students. With its emphasis on academic excellence, research, and overall development, It is ideal place for students who want to pursue their higher education in a vibrant and stimulating environment."
        android:textColor="#ffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855" />

</androidx.constraintlayout.widget.ConstraintLayout>